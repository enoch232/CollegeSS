<!DOCTYPE html>
<html>
<head>
  <title>Collegestuffsale</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="./lightbox2/dist/css/lightbox.min.css" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class = "bg-2">
	<% if notice || alert %>
	<div class ="notification">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
	</div>
	<% end %>

	
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>                        
	      </button>
	      <%= link_to "CollegeStuffSale", root_path, class: "navbar-brand" %>
	    </div>
	    <div class="collapse navbar-collapse" id="myNavbar">
	      <ul class="nav navbar-nav" style = "float:right">
		      <% if user_signed_in? %>
				<li><%= link_to "Sell", new_post_path %></li>
				<li><%= link_to "Message", conversations_path %></li>
				<li><%= link_to "Sign Out", destroy_user_session_path , method: :delete %></li>
			  <% else %>
		        <li><%= link_to "Sign In", new_user_session_path %></li>
				<li><%= link_to "Sign Up", new_user_registration_path %></li>
			  <% end %>
			  <li><%= link_to "edit account", edit_user_registration_path %></li>
		    </ul>
	    </div>
	  </div>
	</nav>
	<%= yield %>
<script src="./lightbox2/dist/js/lightbox-plus-jquery.min.js"></script>
</body>
<script>
$(document).ready(function(){
	setTimeout(function(){
		$('.notification').fadeOut("slow",function(){
			$('this').remove()
		})
	},1300);
	
});
</script>
</html>
